{
  "name": "owddm",
  "version": "1.0.0",
  "private": true,
  "description": "static website built with Hugo",
  "homepage": "https://owddm.com/",
  "bugs": {
    "url": "https://github.com/owddm/owddm.com/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owddm/owddm.com.git"
  },
  "license": "MIT",
  "author": "owddm",
  "scripts": {
    "build": "npm run htmlhint && npx hugo",
    "css-lint": "stylelint \"docs/scss/*.scss\"",
    "htmlhint": "htmlhint docs/_site/**/*.html",
    "serve": "npx hugo serve",
    "spellcheck": "npx cspell \"content/**/*.md\"",
    "svgo": "npm-run-all --parallel \"svgo:base -- --folder=docs/img/header\"",
    "svgo:base": "npx svgo --config=_svgo.yml --recursive",
    "test": "npm run htmlhint && npm run css-lint"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "10.4.8",
    "bootstrap": "^5.2.0",
    "bootstrap-ie11": "^5.2.0",
    "htmlhint": "^1.1.4",
    "hugo-bin": "^0.89.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "10.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
