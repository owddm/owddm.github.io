{
  "name": "owddm.github.io",
  "homepage": "https://github.com/owddm/owddm.github.io",
  "bugs": {
    "url": "https://github.com/owddm/owddm.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owddm/owddm.github.io.git"
  },
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "lint:css": "stylelint \"**/*.css\" --formatter=verbose ",
    "lint:etc": "prettier -c .",
    "lint": "npm run lint:css && npm run lint:etc",
    "lint:fix": "npm run lint:fix:css && npm run lint:fix:etc",
    "lint:fix:etc": "prettier -w .",
    "lint:fix:css": "npm run lint:css -- --fix",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "spellcheck": "npx cspell@7 \"**/*.*\" --no-progress"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.1.2",
    "astro": "^5.7.12",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "ics": "^3.8.1",
    "leaflet": "^1.9.4",
    "maplibre-gl": "^4.7.1",
    "photoswipe": "^5.4.4"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.15",
    "@types/react": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.2",
    "jsdom": "^26.0.0",
    "marked": "^15.0.4",
    "prettier": "^3.4.1",
    "react": "^19.0.0",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=22"
  },
  "volta": {
    "node": "22.12.0"
  }
}
